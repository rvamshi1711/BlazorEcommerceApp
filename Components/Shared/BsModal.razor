<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detelte Category</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Print category details here -->
                @if (CategoryInput is not null)
                {
                    <div><strong>Id:</strong> @CategoryInput.Id</div>
                    <div><strong>Name:</strong> @CategoryInput.Name</div>
                    <!-- add other fields as needed -->
                }
                else
                {
                    <div>No category selected.</div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                    @onclick="() => ConfirmationClicked(false)">Close</button>
                <button type="button" class="btn btn-primary" @onclick="() => ConfirmationClicked(true)">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<bool> OnModalConfirmation { get; set; }

    public Category CategoryInput { get; set; } = new();
    public Task SetCategoryAsync(Category category)
    {
        CategoryInput = category ?? new Category();
        InvokeAsync(StateHasChanged);
        return Task.CompletedTask;
    }
    private async Task ConfirmationClicked(bool value)
    {
        if (value)
        {
            Console.WriteLine("Hi");
            await OnModalConfirmation.InvokeAsync(true);
        }
    }
}